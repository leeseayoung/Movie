<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.penguin.movie.review.repository.MovieRepository">
  	
  	<!-- 영화 추가 기능 -->
  	<insert id="insertMovie" parameterType="map">
  		INSERT INTO
  				`movie`
  			(		
  				`title`
  				, `genre`
  				, `runTime`
  				, `releaseDate`
  				, `plot`
  				, `imagePath`
  				, `screenBox`	
  			)
  			
  			VALUE
  			
  			(
	  			#{title}
	  			, #{genre}
	  			, #{runTime}
	  			, #{releaseDate}
	  			, #{plot}
	  			, #{imagePath}
	  			, #{screenBox}
  			)

  	</insert>
  
  	<select id="selectMovieList"
  	resultType="com.penguin.movie.review.domain.Movie">
 			 SELECT
 			 	`id`
 			 	, `title`
  				, `genre`
  				, `runTime`
  				, `releaseDate`
  				, `plot`
  				, `imagePath`
  				, `screenBox`	
			FROM	 
  				`movie`
  			ORDER BY	
  				`id` DESC
  	
  	</select>
  

  
  <select id="selectMovie" parameterType="int" 
  resultType="com.penguin.movie.review.domain.Movie">
			    SELECT
			        `id`
			        , `title`
			        , `genre`
			        , `runTime`
			        , `releaseDate`
			        , `plot`
			        , `imagePath`
			        , `screenBox`
			    FROM
			        `movie`
			    WHERE
			        `id` = #{id}
	</select>
  
  	
  	<delete id="deleteMovie" parameterType="int">
  	  	DELETE FROM
  	  		`movie`
  	  	WHERE		
  			`id`= #{movieId}
  	</delete>
  
  
  
  </mapper>