<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.penguin.movie.post.repository.PostRepository">
  
    	<insert id="insertPost" parameterType="map">
  		INSERT INTO 
  				`post`
  			(
	  			`userId`
				, `title`
				, `content`			
  			)
  			VALUE
  			(
  				#{userId}
  				, #{title}
  				, #{content}
  			)
	  	</insert>
  

    	<select id="selectPostList" parameterType="int"
	  	resultType="com.penguin.movie.post.domain.Post">
	 			 SELECT
	 			 	`id`
	 			 	, `userId`
					, `title`
					, `content`
					, `createdAt`
					, `updatedAt`
				FROM	 
	  				`post`
	  			WHERE 
	  				`userId` = 	#{userId}
	  			ORDER BY	
	  				`id` DESC
  	
  		</select>
  
	      <select id="selectPost" parameterType="int"
		  resultType="com.penguin.movie.post.domain.Post">
		  		  SELECT
	 			 	`id`
	 			 	, `userId`
					, `title`
					, `content`
					, `createdAt`
					, `updatedAt`
				FROM	 
	  				`post`
	  			WHERE
	  					`id` = #{id}
	
		  </select>
  
    	<delete id="deletePost" parameterType="int">
	  		DELETE FROM
	  			`post`
	  		WHERE
	  			`id` = #{postId}	
	  	
  		</delete>
  
  
    	<update id="updatePost" parameterType="map"> 
	  		UPDATE 
	  			`post`
	  		SET
	  			`title` = #{title}
	  			, `content` = #{content}
	  			, `updatedAt` = now()
	  		WHERE
	  			`id` = #{postId}		
  		</update>
  
  
  </mapper>